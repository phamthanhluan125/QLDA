<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header" data-background-color="purple">
          <h4 class="title display-inline-block">MESSAGES</h4>
          <div class="float-right">
            <%= select_tag "select_box_mail", options_for_select([[t("Hộp thư đến"), :den],
              ["Hộp thư đi", :di]]), class: "bg-none" %>
          </div>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
             <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
              <thead class="text-primary">
                <tr>
                  <th></th>
                  <th>Người gửi/nhận</th>
                  <th>Ngày gửi</th>
                  <th>Tiêu đề</th>
                  <th>Nội dung</th>
                  <th>Trạng Thái</th>
                  <th>Chức năng</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "message", collection: @messages %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="load-modal">
  <%= render partial: "modal_show", collection: @messages, as: :message %>
</div>
