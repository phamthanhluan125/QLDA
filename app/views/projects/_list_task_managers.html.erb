<div class="col-md-12">
  <div class="card">
    <div class="card-header" data-background-color="<%= load_color_header @project %>">
      <h4 class="title">PHÂN CÔNG CÔNG VIỆC</h4>
    </div>
    <div class="card-content table-responsive">
      <div class="material-datatables">
        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
          <thead class="text-primary">
            <tr>
              <th>Tên task</th>
              <th>Nhân viên</th>
              <th>Ghi chú</th>
              <th>Bắt đầu</th>
              <th>Deadline</th>
              <th>Hoàn thành</th>
              <th>Trạng thái</th>
              <th>Chức năng</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "task_manager", collection: @task_managers %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
