<div class="container-fluid">
  <div class="row">
    <div class="title-project">
      <%= @project.name %>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header" data-background-color="<%= load_color_header @project %>">
          <h4 class="title">THÔNG TIN DỰ ÁN</h4>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
             <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
               <tbody>
                <tr>
                  <td>Tên:</td>
                  <td><%= @project.name %></td>
                </tr>
                <tr>
                  <td>Mô tả:</td>
                  <td><%= @project.info %></td>
                </tr>
                <tr>
                  <td>Ngày bắt đầu:</td>
                  <td><%= @project.start_date %></td>
                </tr>
                <tr>
                  <td>Deadline:</td>
                  <td><%= @project.deadline %></td>
                </tr>
                <tr>
                  <td>Hoàn thành/Hủy:</td>
                  <td><%= @project.finish_date.present? ? @project.finish_date : "N/A" %></td>
                </tr>
                <tr>
                  <td>Trạng thái</td>
                  <td><%= load_status_model @project  %></td>
                </tr>
                <tr>
                  <td>Số thành viên</td>
                  <td><%= @project.users.size %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header" data-background-color="<%= load_color_header @project %>">
          <h4 class="title">THÔNG TIN TASK</h4>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
             <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
               <tbody>
                <tr>
                  <td>Tổng số task:</td>
                  <td><%= @project.tasks.size %></td>
                </tr>
                <tr>
                  <td>Số task chưa bắt đầu:</td>
                  <td><%= @project.tasks.pending.size %></td>
                </tr>
                <tr>
                  <td>Số task đang làm:</td>
                  <td><%= @project.tasks.running.size %></td>
                </tr>
                <tr>
                  <td>Số task chậm tiến độ:</td>
                  <td><%= @project.tasks.delay.size %></td>
                </tr>
                <tr>
                  <td>Số task đã hoàn thành:</td>
                  <td><%= @project.tasks.finish.size %></td>
                </tr>
                <tr>
                  <td>Số task hủy: </td>
                  <td><%= @project.tasks.cancel.size %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= link_to "Thêm nhân viên cho dự án", "#modal-add-user", "data-toggle": "modal",
        class: "#{check_btn_edit @project} btn btn-success form-group margin-0" %>
    </div>
    <div class="col-md-12">
      <div class="card">
        <div class="card-header" data-background-color="<%= load_color_header @project %>">
          <h4 class="title">DANH SÁCH NHÂN VIÊN CỦA DỰ ÁN</h4>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
            <table id="datatables" class="table table-striped table-no-bordered table-hover"
              cellspacing="0" width="100%" style="width:100%">
              <thead class="text-primary">
                <tr>
                  <th>Tên</th>
                  <th>Sinh nhật</th>
                  <th>Ngày tham gia dự án</th>
                  <th>Chức vụ</th>
                  <th>Số task đã nhận</th>
                  <th>Số task đã hoàn thành</th>
                  <th>Chức năng</th>
                </tr>
              </thead>
               <tbody>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- model add user for project -->
<div class="modal fade" id="modal-add-user">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Thêm nhân viên vào dự án</h4>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-content">
            <div class="col-md-12">
              <table id="datatables" class="table table-striped table-no-bordered table-hover"
                cellspacing="0" width="100%" style="width:100%">
                <thead class="text-primary">
                  <tr>
                    <th>Tên</th>
                    <th>Chức vụ</th>
                    <th>Chức năng</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users_not_project.each do |user| %>
                    <tr>
                      <td><%= user.name %></td>
                      <td><%= user.role.name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Hủy", "javascript:", class: "btn btn-default", "data-dismiss": "modal" %>
        <%= link_to "Thêm", "#", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
