<div class="container-fluid">
  <div class="row">
    <div class="title-project">
      <%= @project.name %>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header" data-background-color="<%= load_color_header @project %>">
          <h4 class="title">THÔNG TIN DỰ ÁN</h4>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
             <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
               <tbody>
                <tr>
                  <td>Tên:</td>
                  <td><%= @project.name %></td>
                </tr>
                <tr>
                  <td>Mô tả:</td>
                  <td><%= @project.info %></td>
                </tr>
                <tr>
                  <td>Ngày bắt đầu:</td>
                  <td><%= @project.start_date %></td>
                </tr>
                <tr>
                  <td>Deadline:</td>
                  <td><%= @project.deadline %></td>
                </tr>
                <tr>
                  <td>Hoàn thành/Hủy:</td>
                  <td><%= @project.finish_date.present? ? @project.finish_date : "N/A" %></td>
                </tr>
                <tr>
                  <td>Trạng thái</td>
                  <td><%= load_status_model @project  %></td>
                </tr>
                <tr>
                  <td>Số thành viên</td>
                  <td><%= @project.users.size %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header" data-background-color="<%= load_color_header @project %>">
          <h4 class="title">THÔNG TIN TASK</h4>
        </div>
        <div class="card-content table-responsive">
          <div class="material-datatables">
             <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
               <tbody>
                <tr>
                  <td>Tổng số task:</td>
                  <td><%= @project.tasks.size %></td>
                </tr>
                <tr>
                  <td>Số task chưa bắt đầu:</td>
                  <td><%= @project.tasks.pending.size %></td>
                </tr>
                <tr>
                  <td>Số task đang làm:</td>
                  <td><%= @project.tasks.running.size %></td>
                </tr>
                <tr>
                  <td>Số task chậm tiến độ:</td>
                  <td><%= @project.tasks.delay.size %></td>
                </tr>
                <tr>
                  <td>Số task đã hoàn thành:</td>
                  <td><%= @project.tasks.finish.size %></td>
                </tr>
                <tr>
                  <td>Số task hủy: </td>
                  <td><%= @project.tasks.cancel.size %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12 padding-bt-20">
      <%= link_to "Thêm nhân viên cho dự án", "#modal-add-user", "data-toggle": "modal",
        class: "#{check_btn_edit @project} btn btn-primary form-group margin-0 btn-show-modal" %>
      <%= link_to "Thêm task mới", "#modal-new-task", "data-toggle": "modal",
                class: "#{check_btn_edit @project} btn btn-primary form-group margin-0 btn-show-modal" %>
      <%= check_btn_finish_project @project %>
      <%= check_btn_cancel_project @project %>
    </div>
    <%= render "list_users" %>
    <%= render "list_tasks" %>
  </div>
</div>
