<tr class="user-item">
  <td><%= project.name %></td>
  <td><%= project.info %></td>
  <td><%= l project.start_date %></td>
  <td><%= l project.deadline %></td>
  <td><%= load_status_model project %></td>
  <td class="td-actions text-right">
    <button type="button" rel="tooltip" title="" class="<%= check_btn_edit project %>
      btn-user-edit btn btn-success btn-simple btn-show-modal"
      data-original-title="Chỉnh sửa thông tin" data-toggle="modal" href="#edit-project-<%= project.id %>">
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      <div class="ripple-container"></div>
    </button>
    <a type="button" rel="tooltip" title="" class="btn btn-primary btn-simple btn-xs"
     data-original-title="Chi tiết" href= "/projects/<%= project.id %>">
      <i class="fa fa-line-chart" aria-hidden="true"></i>
    </a>
    <button type="button" rel="tooltip" class="<%= check_btn_delete project %>
      btn btn-danger btn-simple" data-original-title="Xóa" title="">
      <i class="fa fa-trash" aria-hidden="true"></i>
    </button>
  </td>
</tr>

<!-- model edit project -->
<%= form_for project, url: project_path(project.id), method: :put do |f| %>
<div class="modal fade" id="edit-project-<%= project.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Chỉnh sửa thông tin dự án</h4>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-content">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group label-floating is-empty">
                    <label class="control-label">Tên</label>
                    <%= f.text_field :name, class: "form-control" %>
                    <span class="material-input"></span>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group label-floating is-empty">
                    <label class="control-label">Mô tả</label>
                    <%= f.text_area :info, maxlength: 3000, minlength: 6, class: "form-control" %>
                    <span class="material-input"></span>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group label-floating is-empty">
                    <label class="control-label">Thời gian bắt đầu</label>
                    <%= f.text_field :start_date, required: true, class: "date date-start form-control" %>
                    <span class="material-input"></span>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group label-floating is-empty">
                    <label class="control-label">Deadline</label>
                    <%= f.text_field :deadline, required: true, class: "date date-end form-control" %>
                    <span class="material-input"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Hủy", "javascript:", class: "btn btn-default", "data-dismiss": "modal" %>
        <%= f.submit "Hoàn Tất", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
